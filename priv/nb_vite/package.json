{
  "name": "@nordbeam/nb-vite",
  "version": "0.2.2",
  "description": "Vite plugin for Phoenix Framework with SSR support, nb_routes auto-regeneration, and automatic component path attribution",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./nb-routes": {
      "import": "./dist/vite-plugin-nb-routes.js",
      "types": "./dist/vite-plugin-nb-routes.d.ts"
    },
    "./component-path": {
      "import": "./dist/vite-plugin-component-path.js",
      "types": "./dist/vite-plugin-component-path.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "rollup.config.js",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vite",
    "phoenix",
    "elixir",
    "hmr",
    "hot-module-replacement",
    "ssr",
    "server-side-rendering",
    "nb_routes",
    "phoenix-framework",
    "react",
    "vue",
    "component-path",
    "debug",
    "devtools"
  ],
  "author": "Nordbeam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nordbeam/nb.git",
    "directory": "nb_vite"
  },
  "bugs": {
    "url": "https://github.com/nordbeam/nb/issues"
  },
  "homepage": "https://github.com/nordbeam/nb/tree/main/nb_vite#readme",
  "dependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "picocolors": "^1.1.1",
    "vite-plugin-full-reload": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.16.11",
    "rollup": "^4.44.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^7.0.0"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
